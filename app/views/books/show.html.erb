<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <%= render'users/user_info', user: @user,book: @book_new %>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <p><%= image_tag @book.user.get_profile_image(100,100) %></p>

                <br>
                <p><%= @book.user.name %></p>
                <% end %>
              </td>
              <td>

                <p>Title : <%= @book.title %></p>


              </td>

              <td>
                <p>Opinion : <%= @book.body %></p>

              </td>


              <% if @user.id == current_user.id %>
              <td>


                <span class="btn btn-sm btn-success edit_book_42450" >

                  <%= link_to "Edit", edit_book_path(@book), method: :get %>

                </span>

              </td>

              <td>
                <span class="btn btn-sm btn-danger destroy_book_42450" >

                <%= link_to "Destroy", book_destroy_path(@book), method: :delete %>
                </span>

              </td>
              <% end %>


            </tr>



          </tbody>






        </table>



      </div>



    </div>



  </div>
</main>




